codesmithyidepath = envvar("CODESMITHYIDE");
import $(codesmithyidepath)/BuildFiles/Include/CodeSmithy/CodeSmithyBuildFiles.bkl;
ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/TestFramework/Include/Ishiko/TestFramework/TestFrameworkCore.bkl;

toolsets = gnu vs2017 vs2015 vs2013;

gnu.makefile = ../GNUmakefile/GNUmakefile;
vs2017.solutionfile = ../VC15/CodeSmithyBuildFilesTests.sln;
vs2015.solutionfile = ../VC14/CodeSmithyBuildFilesTests.sln;
vs2013.solutionfile = ../VC12/CodeSmithyBuildFilesTests.sln;

program CodeSmithyBuildFilesTests : CodeSmithyBuildFiles, IshikoTestFrameworkCore
{
    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoTestFrameworkCore IshikoProcess IshikoErrors boost_filesystem;
    }

    if ($(toolset) != gnu)
    {
        archs = x86 x86_64;
    }

    headers
    {
        ../../Source/VisualStudioSolutionFileTests.h
        ../../Source/MSBuildProjectFileTests.h
    }

    sources
    {
        ../../Source/main.cpp
        ../../Source/VisualStudioSolutionFileTests.cpp
        ../../Source/MSBuildProjectFileTests.cpp
    }
}
